#include <stdio.h>
#include <stdlib.h>

int fibonacci(int n)
{
    //shows the n-th number of the Fibonacci sequence.
    if(n == 0)
    {
        return 0;
    }

    if(n == 1)
    {
        return 1;
    }

    return fibonacci(n-1) + fibonacci(n-2);

}


int main()
{
    int n;
    printf("Enter the number:3 ");
    scanf("%d", &n);

    int result = fibonacci(n);
    printf("%d", result);
}
