#include <stdio.h>
#include <stdlib.h>

int main()
{
    int arrayA[5] = {1, 2, 3, 4, 5};
    int *p;

    p = &arrayA[0];


    printf("Location of 1st element in array: %p\n", p);
    printf("Value pointed by p: %d\n", *p);

    printf("Value of  3rd element in array: %d\n", *(p+2));
    printf("Address of 3rd element in array: %p\n", p+2);

    printf("Value of 4th element in array: %d\n", *(p+3));
    printf("Address of 4th element in array: %p\n", p+3);

    p++;
    printf("Location of the updated pointer to element: %p\n", p);
    printf("Value pointed by p: %d\n", *p);


    return 0;
}
