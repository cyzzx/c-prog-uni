#include <stdio.h>
#include <stdlib.h>

void readArray(int arr[], int n)
{
    for (int i = 0; i < n; i++)
    {
        scanf("%d", &arr[i]);
    }
}


void printArray(int arr[], int n)
{
    if (n == 0)
    {
        return arr[0];
    }


    printArray(arr, n-1);
    printf("%d ", arr[n-1]);

}


int main()
{
    int n;
    int arr[100];
    printf("Input the number of elements to be stored in the array: ");
    scanf("%d", &n);

    readArray(arr, n);
    printArray(arr, n);
}
